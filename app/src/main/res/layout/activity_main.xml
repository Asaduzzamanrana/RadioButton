<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bacground"
    android:padding="20dp"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/RadioGroupId"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <RadioButton
            android:id="@+id/MaleRadioButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maletext"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <RadioButton
            android:id="@+id/FemaleRadioButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/femaletext"
            android:textStyle="bold"
            android:textSize="20sp"
            />

    </RadioGroup>

    <Button
        android:id="@+id/ShowButtonId"
        android:text="@string/showbuttontext"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/showbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:id="@+id/textviewid"
        android:layout_marginTop="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
         />

</LinearLayout>